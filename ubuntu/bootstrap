# Only run if we're running Ubuntu

if hash lsb_release 2>/dev/null; then
  if test "${Ubuntu#*`lsb_release -i`}" != "Ubuntu"; then
    echo 'detected ubuntu: installing base dependencies'
  else
    exit 0
  fi
else
  exit 0
fi

set -e

# # Install git
# apt-get install -y git
# 
# # Install vim
# apt-get install -y vim

# Configure git and git aliases
cd ~/Development/misc
git clone git@github.com:ross-nordstrom/git-going.git
cd git-going
chmod +x git-aliases && ./git-aliases
cd

# Install Node.js
apt-get update
apt-get install -y python-software-properties python g++ make
add-apt-repository ppa:chris-lea/node.js
apt-get update
apt-get install -y nodejs

# Install Rails


exit 0
